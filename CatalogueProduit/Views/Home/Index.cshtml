
@{
    ViewBag.Title = "Index";
}

<h2>Votre catalogue de produit</h2>

<br />

@foreach (var data in ViewBag.listeCategorie)
{
        <div class="row col-x3-12">
            <div id="Categorie">
                @data.LIBELLE_CATEGORIE
            </div>
            @foreach (var produit in data.CAT_PRODUIT)
            {
                <div class="col-x3-12 col-sm-3">
                    <div>@produit.LIBELLE_PRODUIT</div>
                    <img src="@produit.URL_IMAGE_PRODUIT/@produit.IMAGE_PRODUIT"/>
                    <div>@produit.DESCRIPTION_PRODUIT</div>
                    <div><a href="" class="btn btn-warning">voir détails</a></div>
                </div>
            }
        </div>
        <br />

}